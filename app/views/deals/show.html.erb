<%= render :partial => "common/page_header" %>
<div id="tag_cloud" class="span12">
  <h4>相關 Tags</h4>
  <% tag_cloud Deal.is_published.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to("#{tag.name} (#{tag.count})", tag_path(tag.name), :class => "#{css_class}") %>
  <% end %>
</div>
<section class="portfolio">
  <div class="container">
    <div class="row">
      <% if @deal.type_of == "sell" %>
        <div class="span7">
          <%= render :partial => "deal_photo_slide", :locals => {:deal => @deal} %>
        </div>
        <div class="span5">
          <%= render :partial => "deal_info_box", :locals => {:deal => @deal} %>
        </div>
      <% elsif @deal.type_of == "want" %>
        <div class="span12">
          <%= render :partial => "deal_info_box", :locals => {:deal => @deal} %>
        </div>  
      <% end -%>
    </div>    
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="well info-box">
          <%= render :partial => "deal_comments", :locals => {:comments => @comments} %>
          <%= render :partial => "deal_new_comment" %>
        </div>
      </div>
      <div class="span12">
        <div class="well info-box">
        TODO: 您可能也會喜歡...
        </div>
      </div>
    </div>
  </div>
</section>
<% content_for :javascripts do %>
<script type="text/javascript">
  $(document).ready(function () {
    $('#myCarousel').oneCarousel({
      easeIn: 'rotateIn',
      interval: 5000,
      pause: 'hover'
    });
  });
</script>
<% end -%>
<% content_for :stylesheets do %>
<style type="text/css">
  textarea.text {
    width: auto !important;
  }
</style>
<% end -%>