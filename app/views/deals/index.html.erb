<%= render :partial => "common/page_header" %>
<div class="container">
  <div class="row">
    <div class="span12 toolbar" align="center">
      <%= link_to("我要刊登二手商品", new_sell_path, :class => "btn btn-info btn-large") %>
      <hr>
    </div>
    <div class="span12" align="center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th width="50px">No.</th>
            <th width="80px">類別</th>
            <th width="50px"></th>
            <th class="text-center">名稱</th>
            <th width="100px">售價</th>
            <th width="100px">賣方</th>
            <th width="100px">發佈日期</th>
          </tr>
        </thead>
        <tbody>
          <% @sells.each_with_index do |sell, index| %>
            <tr>
              <td><%= render_index_number(index, params[:page]) %></td>
              <td><%= render_category_name(sell) %></td>
              <td><%= render_photo_for_list(sell) %></td>
              <td class="text-center"><%= link_to(sell.name, sell_path(sell), :class => "sell-title") %></td>
              <td><%= render_price(sell) %></td>
              <td><%= render_user_name(sell) %></td>
              <td><%= render_published_at(sell) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate(@sells) %>
    </div>
  </div>
</div>