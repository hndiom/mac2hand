<%= render :partial => "common/page_header" %>
<br>
<div class="span6 offset3 well">
  <div class="box clearfix" align="center">
    <div class="box form-container register">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "simple_form form-horizontal form-register"}) do |f| %>
        <legend>註冊帳號</legend>
        
        <% if resource.errors.any? %>
        <p class="alert alert-danger"><i class="icon-warning-sign"></i> 請再次檢查您輸入的資訊，以完成註冊：</p>
        <% end -%>
        
        <div class="control-group">
          <%= f.label :name, "帳號名稱", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :name, :required => true, :autofocus => true %>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :email, "E-mail", :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email, :required => true %>
            <span class="help-block">將作為您的登入帳號使用</span>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :password, "設定密碼", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :required => true %>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :password_confirmation, "請再次確認密碼", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password_confirmation, :required => true %>
          </div>
        </div>
        <%= button_tag("確認註冊", :class => "btn btn-primary btn-submit") %>
        
      <% end %>
    </div>
  </div>
</div>