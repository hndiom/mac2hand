<table class="table table-striped">
  <thead>
    <th width="65px"></th>
    <th>留言內容</th>
    <th width="150px">時間</th>
  </thead>
  <tbody>
  <% if comments.present? %>
    <% comments.each do |comment| %>
    <tr>
      <td><%= render_comment_avatar_name(comment) %></td>
      <td><%= render_comment_content(comment) %></td>
      <td><%= render_comment_datetime(comment) %></td>
    </tr>
    <% end -%>
  <% else %>
    <tr><td colspan="3">目前沒有關於此商品的留言</td></tr>
  <% end -%>
  </tbody>
</table>