<header class="header">
	<div class="container">
		<div class="row">
			<div class="navbar">
				<div class="navbar-inner">
					<div class="brand-wrapper">
						<%= link_to(root_path, :class => "brand") do %>
							Mac<span>2Hand</span>
						<% end -%>
					</div>
					<%= render_list :class => "nav" do |li| %>
		        <% li << link_to("Home", "/")  %>
		        <% li << link_to("All Deals", "/lists") %>
		        <%# li << link_to("Contact", "/contact_us") %>
						<% if current_user %>
							<% li << link_to(current_user.name, account_path, :class => "username") %>
							<% li << link_to("Logout", "/logout") %>
						<% else %>
							<% li << link_to( "FB Login", user_omniauth_authorize_path(:facebook), :class => "username" ) %>
						<% end %>
	        <% end %>
				</div>
			</div>
		</div>
	</div>
</header>