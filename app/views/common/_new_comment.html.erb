<%= simple_form_for(Comment.new, :url => path ) do |f| %>
  <%= f.input :content, :label => false, :placeholder => "請輸入留言", :as => "text", :input_html => {:cols => "120", :rows => "5"} %>
  <%= f.hidden_field :type_of, :value => type_of %>
  <%= f.button :submit, "留言" ,:disable_with => "請稍候...", :class => "submit-form btn-success btn-large" %>
<% end %>